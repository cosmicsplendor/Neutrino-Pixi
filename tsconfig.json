{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@lib/*": [
        "./lib/*"
      ],
      "@utils/*": [
        "./lib/utils/*"
      ],
      "@helpers": [
        "./lib/helpers.ts"
      ],
      "@components/*": [
        "./lib/components/*"
      ],
      "@root/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ]
    }
  }
}