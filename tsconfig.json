{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
          "@lib/*": [ "./lib/*" ],
          "@utils": [ "./lib/utils/*" ],
          "@components": [ "./lib/components/*" ],
          "@root": [ "./src/*" ],
          "@assets": [ "./src/assets/*" ],
          "@config": [ "./src/config/*" ],
          "@entities": [ "./src/entities/*" ],
          "@screens": [ "./src/screens/*" ],
      }
    }
  }